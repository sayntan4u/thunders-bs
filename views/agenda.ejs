<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agenda - Thunders</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="css/styles.css" rel="stylesheet">
    <link href="css/agenda.css" rel="stylesheet">
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <%- include('sidebar'); -%>

            <!-- Page Content -->
            <div id="content">
                <%- include('header'); -%>

                    <div class="container-xxl">
                        <div class="row">
                            <div class="col-7">
                                <div class="task_manager">
                                    <p class="h4">Today</p>
                                    <span class="badge bg-primary-subtle text-primary-emphasis date"></span>

                                    <span class="task_count">0 tasks</span>

                                    <div class="d-flex justify-content-center loading_agenda">
                                        <div class="spinner-border" role="status">
                                        </div>
                                    </div>

                                    <!-- <div class="loading card bg-primary-subtle text-primary-emphasis mt-2">
                                        <div class="card-body">
                                            
                                        </div>
                                    </div> -->
                                    <div class="tasks-container hide">
                                        <div class="tasks">

                                        </div>
                                        <div class="controls">
                                            <button class="btn bg-danger-subtle text-danger-emphasis btn_add_agenda"
                                                onclick="showEditCard(this)"><i class="fa-solid fa-plus"></i> Add
                                                agenda</button>
                                            <div class="card edit-card hide">
                                                <div class="card-body">
                                                    <input type="text" id="addAgendaTextBox"
                                                        class="form-control input-task"
                                                        placeholder="to add new agenda click here.."
                                                        onkeydown="valueChangedNewAgenda(this)"
                                                        onkeyup="checkKeyNewAgenda(event, this)" />
                                                    <div class="float-end controls-edit">
                                                        <button class="btn bg-secondary-subtle text-secondary-emphasis"
                                                            onclick="hideEditCard()">Cancel</button>
                                                        <button id="btnAddAgenda"
                                                            class="btn bg-danger-subtle text-danger-emphasis disabled">Add
                                                            agenda</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>



                                </div>

                            </div>
                            <div class="col-4 offset-md-1">
                                <div class="card bg-warning-subtle text-warning-emphasis">
                                    <div class="card-body">
                                        <h4>Plans</h4>
                                        <br>
                                        <p class="d-flex align-items-center "><strong>11:00 AM</strong> &nbsp;- Gangotri
                                            &nbsp; <span
                                                class="badge rounded-pill bg-danger-subtle text-danger-emphasis">Cancelled</span>
                                        </p>
                                        <p class="d-flex align-items-center "><strong>1:00 PM</strong> &nbsp;- Anjusree
                                            &nbsp; <span
                                                class="badge rounded-pill bg-success-subtle text-success-emphasis">Confirmed</span>
                                        </p>
                                        <p class="d-flex align-items-center "><strong>3:00 PM</strong> &nbsp;- </p>
                                        <p class="d-flex align-items-center "><strong>5:00 PM</strong> &nbsp;- </p>
                                        <p class="d-flex align-items-center "><strong>7:00 PM</strong> &nbsp;- Alekhya
                                            &nbsp; <span
                                                class="badge rounded-pill bg-primary-subtle text-primary-emphasis">Rescheduled</span>
                                        </p>
                                    </div>
                                </div>
                                <!-- <p class="text-center status_text"><i class="material-icons">task_alt</i> Completed</p> -->

                                <div class="completion_alerts">


                                </div>



                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="deleteAgendaModal" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Delete agenda?</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>The
                                        <span class="task_content"></span>
                                        <span class="task_id hide"></span>
                                        task will be permanently deleted.
                                    </p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn bg-secondary-subtle text-secondary-emphasis"
                                        data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" id="deleteAgendaBtn" class="btn bg-danger-subtle text-danger-emphasis" data-bs-dismiss="modal">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>


            </div>
    </div>

    <%- include('scripts'); -%>
        <script src="js/agenda.js"></script>
</body>

</html>