<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Agenda - Thunders</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link rel='stylesheet'
        href='https://cdn-uicons.flaticon.com/2.6.0/uicons-solid-rounded/css/uicons-solid-rounded.css'>

    <!-- Custom CSS -->
    <link href="css/styles.css" rel="stylesheet" />
    <link href="css/agenda.css" rel="stylesheet" />
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <%- include('sidebar'); -%>

            <!-- Page Content -->
            <div id="content">
                <%- include('header'); -%>

                    <div class="container-xxl">
                        <div class="row">
                            <div class="col-7">
                                <div class="task_manager">
                                    <p class="day h4"></p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="badge bg-primary-subtle text-primary-emphasis date"></span>
                                            <span class="task_count">0 tasks</span>
                                        </div>
                                        <div>
                                            <button
                                                class="btn btn-back btn-sm bg-secondary-subtle text-secondary-emphasis"
                                                disabled><i class="material-icons">chevron_left</i></button>
                                            <button
                                                class="btn btn-forward btn-sm bg-secondary-subtle text-secondary-emphasis"
                                                disabled><i class="material-icons">chevron_right</i></button>
                                        </div>
                                    </div>


                                    <div class="d-flex justify-content-center loading_agenda">
                                        <div class="loader">
                                            <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg"
                                                xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="24px"
                                                height="30px" viewBox="0 0 24 30"
                                                style="enable-background:new 0 0 50 50;" xml:space="preserve">
                                                <rect x="0" y="10" width="4" height="10" fill="#333" opacity="0.2">
                                                    <animate attributeName="opacity" attributeType="XML"
                                                        values="0.2; 1; .2" begin="0s" dur="0.6s"
                                                        repeatCount="indefinite" />
                                                    <animate attributeName="height" attributeType="XML"
                                                        values="10; 20; 10" begin="0s" dur="0.6s"
                                                        repeatCount="indefinite" />
                                                    <animate attributeName="y" attributeType="XML" values="10; 5; 10"
                                                        begin="0s" dur="0.6s" repeatCount="indefinite" />
                                                </rect>
                                                <rect x="8" y="10" width="4" height="10" fill="#333" opacity="0.2">
                                                    <animate attributeName="opacity" attributeType="XML"
                                                        values="0.2; 1; .2" begin="0.15s" dur="0.6s"
                                                        repeatCount="indefinite" />
                                                    <animate attributeName="height" attributeType="XML"
                                                        values="10; 20; 10" begin="0.15s" dur="0.6s"
                                                        repeatCount="indefinite" />
                                                    <animate attributeName="y" attributeType="XML" values="10; 5; 10"
                                                        begin="0.15s" dur="0.6s" repeatCount="indefinite" />
                                                </rect>
                                                <rect x="16" y="10" width="4" height="10" fill="#333" opacity="0.2">
                                                    <animate attributeName="opacity" attributeType="XML"
                                                        values="0.2; 1; .2" begin="0.3s" dur="0.6s"
                                                        repeatCount="indefinite" />
                                                    <animate attributeName="height" attributeType="XML"
                                                        values="10; 20; 10" begin="0.3s" dur="0.6s"
                                                        repeatCount="indefinite" />
                                                    <animate attributeName="y" attributeType="XML" values="10; 5; 10"
                                                        begin="0.3s" dur="0.6s" repeatCount="indefinite" />
                                                </rect>
                                            </svg>
                                        </div>
                                    </div>
                                    <div class="tasks-container hide">
                                        <div class="tasks">

                                        </div>
                                        <div class="controls">
                                            <button class="btn bg-danger-subtle text-danger-emphasis btn_add_agenda"
                                                onclick="showEditCard(this)">
                                                <i class="fa-solid fa-plus"></i> Add agenda
                                            </button>
                                            <div class="card edit-card hide">
                                                <div class="card-body">
                                                    <input type="text" id="addAgendaTextBox"
                                                        class="form-control input-task"
                                                        placeholder="to add new agenda click here.."
                                                        onkeydown="valueChangedNewAgenda(this)"
                                                        onkeyup="checkKeyNewAgenda(event, this)" />
                                                    <div class="float-end controls-edit">
                                                        <button class="btn bg-secondary-subtle text-secondary-emphasis"
                                                            onclick="hideEditCard()">
                                                            Cancel
                                                        </button>
                                                        <button id="btnAddAgenda"
                                                            class="btn bg-danger-subtle text-danger-emphasis disabled">
                                                            Add agenda
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 offset-md-1">
                                <div class="card bg-warning-subtle text-warning-emphasis">
                                    <div class="card-body">
                                        <h4>Plans</h4>
                                        <br />
                                        <div class="planRoster_agenda">
                                            <div class="d-flex justify-content-center loading_roster_agenda">
                                                <div class="loader">
                                                    <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg"
                                                        xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="24px"
                                                        height="30px" viewBox="0 0 24 30"
                                                        style="enable-background:new 0 0 50 50;" xml:space="preserve">
                                                        <rect x="0" y="10" width="4" height="10" fill="#333" opacity="0.2">
                                                            <animate attributeName="opacity" attributeType="XML"
                                                                values="0.2; 1; .2" begin="0s" dur="0.6s"
                                                                repeatCount="indefinite" />
                                                            <animate attributeName="height" attributeType="XML"
                                                                values="10; 20; 10" begin="0s" dur="0.6s"
                                                                repeatCount="indefinite" />
                                                            <animate attributeName="y" attributeType="XML" values="10; 5; 10"
                                                                begin="0s" dur="0.6s" repeatCount="indefinite" />
                                                        </rect>
                                                        <rect x="8" y="10" width="4" height="10" fill="#333" opacity="0.2">
                                                            <animate attributeName="opacity" attributeType="XML"
                                                                values="0.2; 1; .2" begin="0.15s" dur="0.6s"
                                                                repeatCount="indefinite" />
                                                            <animate attributeName="height" attributeType="XML"
                                                                values="10; 20; 10" begin="0.15s" dur="0.6s"
                                                                repeatCount="indefinite" />
                                                            <animate attributeName="y" attributeType="XML" values="10; 5; 10"
                                                                begin="0.15s" dur="0.6s" repeatCount="indefinite" />
                                                        </rect>
                                                        <rect x="16" y="10" width="4" height="10" fill="#333" opacity="0.2">
                                                            <animate attributeName="opacity" attributeType="XML"
                                                                values="0.2; 1; .2" begin="0.3s" dur="0.6s"
                                                                repeatCount="indefinite" />
                                                            <animate attributeName="height" attributeType="XML"
                                                                values="10; 20; 10" begin="0.3s" dur="0.6s"
                                                                repeatCount="indefinite" />
                                                            <animate attributeName="y" attributeType="XML" values="10; 5; 10"
                                                                begin="0.3s" dur="0.6s" repeatCount="indefinite" />
                                                        </rect>
                                                    </svg>
                                                </div>
                                            </div>
                                            <div class="slots_plan hide">
                                                <p class="d-flex align-items-center">
                                                    <i class="fi fi-sr-clock-eleven"></i> &nbsp; <strong>11:00
                                                        AM</strong> &nbsp;-&nbsp;<span id="plan11AM" ></span>
                                                </p>
                                                <p class="d-flex align-items-center">
                                                    <i class="fi fi-sr-clock-one"></i> &nbsp; <strong>1:00 PM</strong>
                                                    &nbsp;-&nbsp;<span id="plan1PM"></span>
                                                </p>
                                                <p class="d-flex align-items-center">
                                                    <i class="fi fi-sr-clock-three"></i> &nbsp;<strong>3:00 PM</strong>
                                                    &nbsp;-&nbsp;<span id="plan3PM"></span>
                                                </p>
                                                <p class="d-flex align-items-center">
                                                    <i class="fi fi-sr-clock-five"></i> &nbsp; <strong>5:00 PM</strong>
                                                    &nbsp;-&nbsp;<span id="plan5PM"></span>
                                                </p>
                                                <p class="d-flex align-items-center">
                                                    <i class="fi fi-sr-clock-seven"></i> &nbsp;<strong>7:00 PM</strong>
                                                    &nbsp;-&nbsp;<span id="plan7PM"></span>
                                                </p>
                                            </div>
                                        </div>


                                    </div>
                                </div>
                                <!-- <p class="text-center status_text"><i class="material-icons">task_alt</i> Completed</p> -->

                                <div class="completion_alerts"></div>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="deleteAgendaModal" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Delete agenda?</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>
                                        The
                                        <span class="task_content"></span>
                                        <span class="task_id hide"></span>
                                        task will be permanently deleted.
                                    </p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn bg-secondary-subtle text-secondary-emphasis"
                                        data-bs-dismiss="modal">
                                        Cancel
                                    </button>
                                    <button type="button" id="deleteAgendaBtn"
                                        class="btn bg-danger-subtle text-danger-emphasis" data-bs-dismiss="modal">
                                        Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
    </div>

    <%- include('scripts'); -%>
        <script src="js/agenda.js"></script>

</body>

</html>