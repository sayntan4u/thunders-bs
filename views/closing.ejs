<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Closing - Thunders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="css/styles.css">
  <link rel="stylesheet" href="css/closing.css">
</head>

<body>
  <div class="wrapper">
    <!-- Sidebar -->
    <%- include('sidebar'); -%>

      <!-- Page Content -->
      <div id="content">
        <%- include('header'); -%>

          <div class="container-fluid">
            <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
              <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                <path
                  d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
              </symbol>
              <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
                <path
                  d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
              </symbol>
              <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                <path
                  d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
              </symbol>
            </svg>
            <div class="row">
              <div class="add_alert alert alert-warning fade hide" role="alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:">
                  <use xlink:href="#check-circle-fill" />
                </svg>
                <strong>Holy guacamole! </strong> <span id="newPersonName"></span> has been added
                successfully.
              </div>
              <div class="delete_alert alert alert-danger fade hide" role="alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                  <use xlink:href="#exclamation-triangle-fill" />
                </svg>
                <strong>Holy guacamole! </strong> <span id="deletePersonName"></span> has been deleted
                successfully.
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                      <div class="row g-3">
                        <div class="col-auto">
                          <h5 class="card-title mb-0 team-member-header">Closing List</h5>
                        </div>

                      </div>

                      <div class="row g-3">
                        <div class="col-auto">
                          <button class="btn bg-primary-subtle text-primary-emphasis col-auto" data-bs-toggle="modal"
                            data-bs-target="#addClosingModal">
                            <i class="fa-solid fa-plus"></i> Add Closing
                          </button>
                        </div>

                      </div>

                    </div>

                    <!-- Add Member Modal -->
                    <div class="modal fade" id="addClosingModal" tabindex="-1">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="addMemberModalLabel">Add New Closing</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <form id="addClosingForm">
                              <div class="mb-3">
                                <label for="memberName" class="form-label">IR Name</label>
                                <input type="text" class="form-control" id="irNameAdd" placeholder="Enter IR name">
                              </div>
                              <div class="mb-3">
                                <label for="memberName" class="form-label">Prospect Name</label>
                                <input type="text" class="form-control" id="prospectNameAdd"
                                  placeholder="Enter prospect name">
                              </div>
                              <div class="row">
                                <div class="col-auto">
                                  <label for="memberGroup" class="form-label">UV</label>
                                  <select class="form-select" id="uvAdd">
                                
  
                                  </select>
                                </div>
                                
                                <div class="col-auto">
                                  <label for="memberGroup" class="form-label">Status</label>
                                  <select class="form-select" id="statusAdd">
                                    <option>-select-</option>
                                    <option>CIP</option>
                                    <option>LA</option>
                                    <option>LA2</option>
                                    <option>AOS</option>
                                    <option>MIA</option>
                                    <option>2nd Meeting Done</option>
                                    <option>Purchase Done</option>
  
                                  </select>
                                </div>
                              </div>
            
                              <div class="mb-3" style="margin-top: 15px;">
                                <label for="memberGroup" class="form-label">Sapphire Upline</label>
                                <select class="form-select" id="sapphireUplineAdd">

                                </select>
                              </div>
                              
                              

                            </form>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn bg-secondary-subtle text-secondary-emphasis" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn bg-primary-subtle text-primary-emphasis" data-bs-dismiss="modal" id="addClosing">Add
                              Closing</button>
                          </div>
                        </div>
                      </div>
                    </div>

                    <!-- Delete Member Modal -->
                    <div class="modal fade" id="deleteClosingModal" tabindex="-1" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title">Delete Closing</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            Do you want to delete <b><span id="userName"></span></b> ?
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn bg-secondary-subtle text-secondary-emphasis" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn bg-danger-subtle text-danger-emphasis" data-bs-dismiss="modal" id="deleteMember"
                              onclick="deleteClosing()">Delete Closing</button>
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="table-responsive">
                      <table class="table table-hover">
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">IR</th>
                            <th scope="col">Prospect</th>
                            <th scope="col">UV</th>
                            <th scope="col">Status</th>
                            <th scope="col">Node Upline</th>
                            <th scope="col">Profit</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody class="closings">
                        </tbody>
                      </table>
                      <div class="loading form-group">
                        <div class="d-flex align-items-center">
                          <span class="text-success">Loading data...</span>
                          &nbsp;
                          <div class="spinner-border spinner-border-sm text-success" role="status">

                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
  </div>

  <%- include('scripts'); -%>
  <script src="js/closing.js"></script>
</body>

</html>